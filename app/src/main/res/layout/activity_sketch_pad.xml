<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <fragment
        android:id="@+id/id_fragment_sketch_pad"
        android:name="com.zcs.android.lib.sketch.mvp.ui.SketchPadFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_btn_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="撤销" />

        <Button
            android:id="@+id/id_btn_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恢复" />

        <Button
            android:id="@+id/id_btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空" />

        <Button
            android:id="@+id/id_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存" />

        <Button
            android:id="@+id/id_btn_set_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置背景" />

        <Button
            android:id="@+id/id_btn_test_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔迹测试" />

        <Button
            android:id="@+id/id_btn_bezier_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贝塞尔笔" />
    </LinearLayout>

</RelativeLayout>
